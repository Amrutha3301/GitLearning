import java.util.Scanner;

public class AddTwoNumbersNoControl {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter first number: ");
        int num1 = sc.nextInt();

        System.out.print("Enter second number: ");
        int num2 = sc.nextInt();

        System.out.print("Enter 1 to add, any other number to skip: ");
        int choice = sc.nextInt();

        // Use array to avoid control statement
        int[] results = {0, num1 + num2};
        System.out.println("Result: " + results[Math.min(choice, 1)]);
        
        // If choice == 1, shows the sum; else shows 0 or does nothing
    }
}
